{
  "extends": "@homestead/config-ts/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["jest", "./types"],
    "outDir": "dist",
    "allowJs": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/__tests__"]
}
