{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "types": [],
    "outDir": "dist",
    "removeComments": true,
    "target": "ESNext",

    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
